<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button android:id="@+id/btn_logout" android:layout_alignParentEnd="true" android:layout_margin="10dp" android:layout_gravity="right" android:drawableStart="@drawable/ic_out" android:layout_width="50dp" android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/list_wisata"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>